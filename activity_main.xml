<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vikas.q.MainActivity">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="360dp"
        android:layout_height="124dp"
        android:textSize="35dp"
        android:text="0"
        android:gravity="right"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />

    <Button
        style="@style/button_style"
        android:id="@+id/button1"
        android:text="1"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/clear" />

    <Button
        android:id="@+id/button2"
        style="@style/button_style"
        android:layout_marginLeft="25dp"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/clear" />

    <Button
        android:id="@+id/button3"
        style="@style/button_style"
        android:layout_marginLeft="27dp"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/del" />

    <Button
        style="@style/button_style"
        android:id="@+id/button4"
        android:text="4"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        style="@style/button_style"
        android:id="@+id/button5"
        android:text="5"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        android:layout_marginLeft="25dp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        style="@style/button_style"
        android:id="@+id/button6"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        style="@style/button_style"
        android:id="@+id/button7"
        android:text="7"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        style="@style/button_style"
        android:id="@+id/button8"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        style="@style/button_style"
        android:id="@+id/button9"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        style="@style/button_style"
        android:id="@+id/button0"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="17dp"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        style="@style/button_style"
        android:id="@+id/divide"
        android:text="/"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/del" />

    <Button
        style="@style/button_style"
        android:id="@+id/multiply"
        android:text="*"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,RtlHardcoded"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/divide"
        app:layout_constraintHorizontal_bias="0.928" />

    <Button
        style="@style/button_style"
        android:id="@+id/minus"
        android:text="-"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded"
        app:layout_constraintLeft_toRightOf="@+id/button9"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/multiply"
        app:layout_constraintHorizontal_bias="0.928" />

    <Button
        style="@style/button_style"
        android:id="@+id/plus"
        android:text="+"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded"
        app:layout_constraintLeft_toRightOf="@+id/equal"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.916"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/minus" />

    <Button
        style="@style/special_button"
        android:id="@+id/clear"
        android:text="AC"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        android:layout_height="58dp"
        android:layout_width="153dp" />

    <Button
        style="@style/special_button"
        android:id="@+id/del"
        android:text="del"
        app:layout_constraintLeft_toRightOf="@+id/clear"
        android:layout_marginLeft="37dp"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        android:layout_height="58dp"
        android:layout_width="153dp" />

    <Button
        style="@style/button_style"
        android:id="@+id/dot"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:text="."
        app:layout_constraintLeft_toRightOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        style="@style/operation_button"
        android:id="@+id/equal"
        android:text="="
        android:layout_height="53dp"
        android:layout_width="71dp"
        app:layout_constraintLeft_toRightOf="@+id/dot"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        tools:ignore="HardcodedText" />


</android.support.constraint.ConstraintLayout>
